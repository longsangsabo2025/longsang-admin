# ================================================
# N8N CONFIGURATION
# Environment variables for n8n setup
# ================================================

# Database Configuration
DB_SQLITE_POOL_SIZE=10
N8N_DATABASE_TYPE=sqlite

# Task Runners (recommended for production)
N8N_RUNNERS_ENABLED=true

# Security Settings
N8N_BLOCK_ENV_ACCESS_IN_NODE=false
N8N_GIT_NODE_DISABLE_BARE_REPOS=true

# Server Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Editor Configuration
N8N_EDITOR_BASE_URL=http://localhost:5678

# Webhook Configuration
WEBHOOK_URL=http://localhost:5678

# CORS Configuration (Allow frontend to call webhooks)
N8N_CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:5173,http://localhost:5174,http://localhost:5175
N8N_WEBHOOK_CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:5173,http://localhost:5174,http://localhost:5175

# Execution Settings
EXECUTIONS_PROCESS=main
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=336

# Security
N8N_SECURE_COOKIE=false
N8N_JWT_AUTH_HEADER=Authorization

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Basic Auth (DISABLED for local development - auto login)
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=
N8N_BASIC_AUTH_PASSWORD=

# User Management (DISABLED for auto login)
N8N_USER_MANAGEMENT_DISABLED=true
N8N_SKIP_OWNER_SETUP=true

# License
N8N_LICENSE_TENANT_ID=
N8N_LICENSE_ACTIVATION_KEY=

# Public API
N8N_PUBLIC_API_DISABLED=false
N8N_PUBLIC_API_ENDPOINT=api

# Metrics
N8N_METRICS=false

# Default locale
N8N_DEFAULT_LOCALE=en

# Binary data
N8N_DEFAULT_BINARY_DATA_MODE=filesystem

# Node.js settings
NODE_ENV=development