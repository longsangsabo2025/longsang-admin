{
  "name": "Auto Social Media Campaign Scheduler",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "minutes",
              "minutesInterval": 15
            }
          ]
        }
      },
      "id": "schedule-trigger",
      "name": "Every 15 Minutes",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT c.*, array_agg(cp.id) as post_ids\nFROM marketing_campaigns c\nLEFT JOIN campaign_posts cp ON cp.campaign_id = c.id\nWHERE c.status = 'scheduled'\n  AND c.scheduled_at <= NOW()\n  AND c.scheduled_at >= NOW() - INTERVAL '15 minutes'\nGROUP BY c.id\nLIMIT 10",
        "options": {}
      },
      "id": "fetch-scheduled",
      "name": "Fetch Scheduled Campaigns",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [450, 300],
      "credentials": {
        "postgres": {
          "id": "2",
          "name": "Supabase PostgreSQL"
        }
      }
    },
    {
      "parameters": {
        "conditions": {
          "number": [
            {
              "value1": "={{ $json.length }}",
              "operation": "larger",
              "value2": 0
            }
          ]
        }
      },
      "id": "check-has-campaigns",
      "name": "Has Campaigns?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [650, 300]
    },
    {
      "parameters": {},
      "id": "split-campaigns",
      "name": "Split Into Items",
      "type": "n8n-nodes-base.splitInBatches",
      "typeVersion": 1,
      "position": [850, 200]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "UPDATE marketing_campaigns\nSET status = 'running', started_at = NOW()\nWHERE id = '{{ $json.id }}'\nRETURNING *",
        "options": {}
      },
      "id": "update-status-running",
      "name": "Mark as Running",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [1050, 200],
      "credentials": {
        "postgres": {
          "id": "2",
          "name": "Supabase PostgreSQL"
        }
      }
    },
    {
      "parameters": {
        "resource": "text",
        "operation": "message",
        "text": "={{ $json.content }}",
        "options": {
          "systemMessage": "You are a social media expert. Create 3 optimized versions of this content for LinkedIn, Facebook, and Twitter. Return JSON with keys: linkedin, facebook, twitter. Each should be platform-optimized with appropriate tone, length, and emojis.",
          "maxTokens": 800,
          "temperature": 0.7,
          "responseFormat": "json_object"
        }
      },
      "id": "ai-optimize-multi",
      "name": "AI Multi-Platform Optimizer",
      "type": "@n8n/n8n-nodes-langchain.openAi",
      "typeVersion": 1.0,
      "position": [1250, 200],
      "credentials": {
        "openAiApi": {
          "id": "1",
          "name": "OpenAI API"
        }
      }
    },
    {
      "parameters": {
        "functionCode": "const optimized = JSON.parse($input.item.json.message.content);\nconst campaign = $input.item.json;\nconst platforms = campaign.platforms || [];\n\nconst results = [];\n\nif (platforms.includes('linkedin')) {\n  results.push({\n    platform: 'linkedin',\n    content: optimized.linkedin,\n    campaign_id: campaign.id\n  });\n}\n\nif (platforms.includes('facebook')) {\n  results.push({\n    platform: 'facebook',\n    content: optimized.facebook,\n    campaign_id: campaign.id\n  });\n}\n\nif (platforms.includes('twitter')) {\n  results.push({\n    platform: 'twitter',\n    content: optimized.twitter,\n    campaign_id: campaign.id\n  });\n}\n\nreturn results;"
      },
      "id": "prepare-posts",
      "name": "Prepare Platform Posts",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [1450, 200]
    },
    {
      "parameters": {},
      "id": "split-platforms",
      "name": "Split Platforms",
      "type": "n8n-nodes-base.splitInBatches",
      "typeVersion": 1,
      "position": [1650, 200]
    },
    {
      "parameters": {
        "conditions": {
          "string": [
