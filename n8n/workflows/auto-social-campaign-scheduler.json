      "position": [2050, 500],
      "credentials": {
        "twitterOAuth1Api": {
          "id": "5",
          "name": "Twitter API"
        }
      }
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "INSERT INTO campaign_posts (campaign_id, platform, content, status, posted_at, post_id, post_url)\nVALUES (\n  '{{ $json.campaign_id }}',\n  '{{ $json.platform }}',\n  '{{ $json.content }}',\n  'posted',\n  NOW(),\n  '{{ $json.post_id || \"\" }}',\n  '{{ $json.post_url || \"\" }}'\n)\nRETURNING *",
        "options": {}
      },
      "id": "save-post-success",
      "name": "Save Post to Database",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [2250, 300],
      "credentials": {
        "postgres": {
          "id": "2",
          "name": "Supabase PostgreSQL"
        }
      }
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "UPDATE campaign_posts\nSET status = 'failed',\n    error_message = '{{ $json.error.message }}',\n    retry_count = retry_count + 1\nWHERE campaign_id = '{{ $json.campaign_id }}'\n  AND platform = '{{ $json.platform }}'\n  AND status = 'pending'",
        "options": {}
      },
      "id": "save-post-error",
      "name": "Save Error to Database",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [2250, 500],
      "credentials": {
        "postgres": {
          "id": "2",
          "name": "Supabase PostgreSQL"
        }
      },
      "continueOnFail": true
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "WITH campaign_status AS (\n  SELECT \n    campaign_id,\n    COUNT(*) as total_posts,\n    COUNT(CASE WHEN status = 'posted' THEN 1 END) as posted_count,\n    COUNT(CASE WHEN status = 'failed' THEN 1 END) as failed_count\n  FROM campaign_posts\n  WHERE campaign_id = '{{ $json.campaign_id }}'\n  GROUP BY campaign_id\n)\nUPDATE marketing_campaigns c\nSET \n  status = CASE \n    WHEN cs.posted_count = cs.total_posts THEN 'completed'\n    WHEN cs.failed_count = cs.total_posts THEN 'failed'\n    ELSE 'running'\n  END,\n  completed_at = CASE \n    WHEN cs.posted_count = cs.total_posts THEN NOW()\n    ELSE NULL\n  END\nFROM campaign_status cs\nWHERE c.id = cs.campaign_id\n  AND c.id = '{{ $json.campaign_id }}'\nRETURNING c.*",
        "options": {}
      },
      "id": "update-campaign-status",
      "name": "Update Campaign Status",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [2450, 300],
      "credentials": {
        "postgres": {
          "id": "2",
          "name": "Supabase PostgreSQL"
        }
      }
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "INSERT INTO marketing_workflow_executions (user_id, workflow_name, workflow_id, execution_id, status, started_at, finished_at, duration_ms, input_data, output_data)\nVALUES (\n  '{{ $json.user_id }}',\n  'Auto Social Media Campaign Scheduler',\n  'auto-social-scheduler',\n  '{{ $workflow.id }}',\n  'success',\n  NOW() - INTERVAL '{{ $json.duration_ms }} milliseconds',\n  NOW(),\n  {{ $json.duration_ms }},\n  '{{ $json.input }}'::jsonb,\n  '{{ $json.output }}'::jsonb\n)",
        "options": {}
      },
