{
  "apps": [
    {
      "name": "sabo-arena-frontend",
      "script": "npm",
      "args": "run dev:frontend",
      "cwd": "./",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "development"
      },
      "error_file": "./logs/frontend-error.log",
      "out_file": "./logs/frontend-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z"
    },
    {
      "name": "sabo-arena-api",
      "script": "server.js",
      "cwd": "./api",
      "instances": 1,
      "autorestart": true,
      "watch": ["server.js", "routes", "google-drive.js"],
      "ignore_watch": ["node_modules", "logs"],
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3001
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 3001
      },
      "error_file": "./logs/api-error.log",
      "out_file": "./logs/api-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true
    },
    {
      "name": "sabo-arena-n8n",
      "script": "npx",
      "args": "n8n start",
      "cwd": "./",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "N8N_PORT": 5678
      },
      "error_file": "./logs/n8n-error.log",
      "out_file": "./logs/n8n-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z"
    }
  ],
  "deploy": {
    "production": {
      "user": "node",
      "host": "your-server.com",
      "ref": "origin/main",
      "repo": "git@github.com:your-repo.git",
      "path": "/var/www/sabo-arena",
      "post-deploy": "npm install && pm2 reload ecosystem.config.json --env production"
    }
  }
}
