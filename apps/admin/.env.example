# ================================================
# SUPABASE CONFIGURATION
# ================================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Optional - For MCP and Edge Functions
VITE_SUPABASE_PROJECT_ID=your-project-id
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# AI Provider Configuration (Choose one or multiple)
# OpenAI
VITE_OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Claude
VITE_ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# N8N Configuration (for Workflow Automation)
VITE_N8N_BASE_URL=http://localhost:5678
VITE_N8N_API_KEY=your_n8n_api_key_here

# N8n Webhook Configuration
VITE_N8N_WEBHOOK_URL=http://localhost:5678/webhook
VITE_N8N_WEBHOOK_SECRET=your-secure-webhook-secret-key
VITE_N8N_INSTANCE_URL=http://localhost:5678

# Email Provider (for Lead Nurture Agent)
# Resend (Recommended)
VITE_RESEND_API_KEY=re_your-resend-api-key

# Or SendGrid
VITE_SENDGRID_API_KEY=SG.your-sendgrid-api-key
VITE_SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# WordPress Publishing (for Content Queue)
VITE_WORDPRESS_URL=https://yourblog.com
VITE_WORDPRESS_USERNAME=your-username
VITE_WORDPRESS_APP_PASSWORD=your-app-password

# Social Media APIs (for Social Media Agent)
# LinkedIn
VITE_LINKEDIN_ACCESS_TOKEN=your-linkedin-token

# Twitter/X
VITE_TWITTER_API_KEY=your-twitter-api-key
VITE_TWITTER_API_SECRET=your-twitter-api-secret
VITE_TWITTER_ACCESS_TOKEN=your-twitter-access-token
VITE_TWITTER_ACCESS_SECRET=your-twitter-access-secret

# Facebook
VITE_FACEBOOK_ACCESS_TOKEN=your-facebook-token
VITE_FACEBOOK_PAGE_ID=your-page-id

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ================================================
# BUG SYSTEM v2.0 - Advanced Features
# ================================================

# Sentry Error Tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Real-time Alerts - Slack
# Create Slack App: https://api.slack.com/apps → Incoming Webhooks
VITE_SLACK_WEBHOOK_URL=your-slack-webhook-url
VITE_SLACK_CHANNEL=#alerts

# Real-time Alerts - Discord
# Server Settings → Integrations → Webhooks → New Webhook
VITE_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/000000000000000000/xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Real-time Alerts - Telegram
# Talk to @BotFather to create bot and get token
# Get chat_id from https://api.telegram.org/bot<token>/getUpdates
VITE_TELEGRAM_BOT_TOKEN=0000000000:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
VITE_TELEGRAM_CHAT_ID=-1001234567890

# AI-Powered Fix Suggestions
# Uses OpenAI GPT-4 for intelligent error analysis
# Falls back to pattern-matching if not configured
# (Uses VITE_OPENAI_API_KEY from above)

# Predictive Analytics Settings
VITE_PREDICTIVE_MONITORING_ENABLED=true
VITE_PREDICTIVE_CHECK_INTERVAL_MS=60000
VITE_ERROR_THRESHOLD_CRITICAL=10
VITE_ERROR_THRESHOLD_WARNING=5

# ================================================
# EXTERNAL INTEGRATIONS
# ================================================

# Notion Integration
# Get API key from: https://www.notion.so/my-integrations
VITE_NOTION_API_KEY=ntn_your_notion_api_key_here

